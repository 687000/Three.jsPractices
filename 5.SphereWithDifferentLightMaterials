<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Sphere With Different Light Materials</title>
        <script src="js/three.js"></script>
        <style type="text/css">
            div#canvas-frame {
                border: none;
                cursor: pointer;
                width: 100%;
                height: 600px;
                background-color: #EEEEEE;
            }

        </style>
        <script>
        function init() {
            // renderer
            var renderer = new THREE.WebGLRenderer();
            renderer.setSize(400, 300);
            document.body.appendChild(renderer.domElement);
            renderer.setClearColor('black'); //grey
            // scene
            var scene = new THREE.Scene();

            // camera
            var camera = new THREE.PerspectiveCamera(90, 400 / 300, 1, 10);
            camera.position.set(0, 0, 5);
            scene.add(camera);

            var cube = new THREE.Mesh(new THREE.SphereGeometry(3, 150, 150),
                    new THREE.MeshPhongMaterial({
                        color: 0xff0000,
                        specular: 0xffff00,//高光颜色
                        shininess: 100//越大光斑越小

                    })
            );
            /*
            var cube = new THREE.Mesh(new THREE.SphereGeometry(3, 18, 500),
                    new THREE.MeshPhongMaterial({
                        color: 0xff0000//漫射光颜色

                    })
            );*/
            scene.add(cube);
        }

        </script>
    </head>

    <body onload="init();">
        <!--canvas id="canvas-frame"></canvas-->
    </body>
</html>
